            function timdif(readtime){
                var realtime = Math.round(Date.now() / 1000);
                var tdif = realtime-readtime;
                if (tdif<60)
                {
                    console.log("Less than a minute");
                }
                else
                {
                    tdif = Math.round(tdif/60);
                    if(tdif < 60)
                    {
                        console.log(tdif + " Minutes");
                    }
                    else{
                        tdif = Math.round(tdif/60);
                        if(tdif < 24){
                            console.log(tdif + " Hours");
                        }
                        else{
                            tdif = Math.round(tdif/24);
                            console.log(tdif + " Days");
                        }
                    }
                }
            }
            function showwater(gall){
                var perc = (gall/40.0)*100
                var lowperc = perc-5
                if (lowperc<0)
                    {lowperc = 0}
                if(lowperc>20)
                {
                    var gradlvl = "linear-gradient(0deg,rgba(0,212,255,1) " + lowperc + "%,rgba(255,255,255,1) " + perc + "%"
                }
                else
                {
                    var gradlvl = "linear-gradient(0deg,rgba(255,0,129,1) " + lowperc + "%,rgba(255,255,255,1) " + perc + "%"
                }

                $('#watlevel').css("background-image",gradlvl);
            }
            function hotcold(temp){
                var maxred = 255;
                var maxblue = 255;
                var maxgreen = 255;
                var perc = (temp+20)/60.0;
                maxred = Math.floor(maxred*perc);
                maxgreen = Math.floor((1-perc)*maxgreen);
                maxblue = Math.floor((1-perc)*maxblue);
                var bkgcolor = "rgba(" +maxred+","+maxgreen+','+maxblue+",1)"
                $("#frosty").css("background-color", bkgcolor)
            }
